<p id="notice"><%= notice %></p>

<h1>Busstops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @busstops.each do |busstop| %>
      <tr>
        <td><%= busstop.name %></td>
        <td><%= busstop.latitude %></td>
        <td><%= busstop.longitude %></td>
        <td><%= link_to 'Show', busstop %></td>
        <td><%= link_to 'Edit', edit_busstop_path(busstop) %></td>
        <td><%= link_to 'Destroy', busstop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Busstop', new_busstop_path %>
